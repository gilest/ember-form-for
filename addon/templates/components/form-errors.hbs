{{#if this.errors}}
  <FormFor::CustomTag @tagName={{this.errorsTagName}} @class={{this.joinedErrorClasses}}>
    {{#each this.limitedErrors as |error index|}}
      <FormFor::CustomTag @tagName={{this.messageTagName}} @id={{concat this.errorId "-" index}} @role="alert">
        {{#if (has-block)}}
          {{yield error}}
        {{else}}
          {{#if error.message}}
            {{error.message}}
          {{else}}
            {{error}}
          {{/if}}
        {{/if}}
      </FormFor::CustomTag>
    {{/each}}
  </FormFor::CustomTag>
{{/if}}
