{{#if errors}}
  <FormFor::CustomTag @tagName={{errorsTagName}} @class={{joinedErrorClasses}}>
    {{#each limitedErrors as |error index|}}
      <FormFor::CustomTag @tagName={{messageTagName}} @id={{concat errorId "-" index}} @role="alert">
        {{#if hasBlock}}
          {{yield error}}
        {{else}}
          {{#if error.message}}
            {{error.message}}
          {{else}}
            {{error}}
          {{/if}}
        {{/if}}
      </FormFor::CustomTag>
    {{/each}}
  </FormFor::CustomTag>
{{/if}}
