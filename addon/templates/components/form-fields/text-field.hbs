{{#form-field propertyName
    class="text-field"
    classNames=fieldClasses
    errorClasses=errorClasses
    hintClasses=hintClasses
    inputClasses=inputClasses
    labelClasses=labelClasses
    serializeValue=serializeValue
    deserializeValue=deserializeValue
    object=object
    hint=hint
    form=form
    label=label
    control=control
    update=(action this.update) as |f|}}
  <f.label @required={{required}} />
  <f.control
    @accept={{accept}}
    @accesskey={{accesskey}}
    @autocomplete={{autocomplete}}
    @autofocus={{autofocus}} @autosave={{autosave}} @dir={{dir}} @disabled={{disabled}}
    @hidden={{hidden}} @inputmode={{inputmode}} @lang={{lang}} @list={{list}}
    @max={{max}} @maxlength={{maxlength}} @min={{min}} @minlength={{minlength}}
    @multiple={{multiple}} @pattern={{pattern}} @placeholder={{placeholder}}
    @required={{required}} @size={{size}}
    @spellcheck={{spellcheck}} @step={{step}} @tabindex={{tabindex}}
    @title={{title}} @type={{type}} @_value={{get object propertyName}}
    @serializeValue={{serializeValue}} @deserializeValue={{deserializeValue}}
    @onchange={{action '_update' value='target.value'}}
    @oninput={{action '_update' value='target.value'}}
    @readonly={{this.readonly}}
/>
  {{f.errors}}
  {{f.hint}}
{{/form-field}}
