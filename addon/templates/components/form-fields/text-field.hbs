{{#form-field this.propertyName
    class="text-field"
    classNames=this.fieldClasses
    errorClasses=this.errorClasses
    hintClasses=this.hintClasses
    inputClasses=this.inputClasses
    labelClasses=this.labelClasses
    serializeValue=this.serializeValue
    deserializeValue=this.deserializeValue
    object=this.object
    hint=this.hint
    form=this.form
    label=this.label
    control=this.control
    update=(action this.update) as |f|}}
  <f.label @required={{this.required}} />
  <f.control
    @accept={{this.accept}}
    @accesskey={{this.accesskey}}
    @autocomplete={{this.autocomplete}}
    @autofocus={{this.autofocus}} @autosave={{this.autosave}} @dir={{this.dir}} @disabled={{this.disabled}}
    @hidden={{this.hidden}} @inputmode={{this.inputmode}} @lang={{this.lang}} @list={{this.list}}
    @max={{this.max}} @maxlength={{this.maxlength}} @min={{this.min}} @minlength={{this.minlength}}
    @multiple={{this.multiple}} @pattern={{this.pattern}} @placeholder={{this.placeholder}}
    @required={{this.required}} @size={{this.size}}
    @spellcheck={{this.spellcheck}} @step={{this.step}} @tabindex={{this.tabindex}}
    @title={{this.title}} @type={{this.type}} @_value={{get this.object this.propertyName}}
    @serializeValue={{this.serializeValue}} @deserializeValue={{this.deserializeValue}}
    @onchange={{action '_update' value='target.value'}}
    @oninput={{action '_update' value='target.value'}}
    @readonly={{this.readonly}}
/>
  {{f.errors}}
  {{f.hint}}
{{/form-field}}
